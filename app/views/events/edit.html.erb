<h1>Edit Event</h1>
<%= render 'formerrors' %>
<%= form_for @event do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <br><br>
  <%= f.label :date %>
  <%= f.date_select :date %>
  <br><br>
  <%= f.label :follow_up, "Follow Up Needed?" %>
  <%= f.check_box :follow_up %>
  <%= f.label :follow_up_date %>
  <%= f.date_select :follow_up_date, :include_blank => true %>
  <br><br>
  <%= f.label :notes %>
  <%= f.text_area :notes %>
  <br><br>
  <hr>
  <%= hidden_field_tag "event[user_id]", current_user.id %>
  <%= f.submit %>
<% end %>
